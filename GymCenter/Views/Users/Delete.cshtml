@model GymCenter.Models.JoinMemberUserTables

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="text-center">Delete</h1>


<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
<h3 class="text-center">Are you sure you want to delete this Member?</h3>
        <h4 class="text-center mt-3">Member Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Fname)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Fname)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Lname)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Lname)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Username)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Passwordd)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Passwordd)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ImagePath)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Userid" />
            <div class="d-grid mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
