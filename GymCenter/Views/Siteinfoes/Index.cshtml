@model IEnumerable<GymCenter.Models.Siteinfo>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container" style="margin-top: 5.5rem;">
    <h1 class="text-center mb-4">Site Info Management</h1>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                  <th>
                @Html.DisplayNameFor(model => model.Sitename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SiteImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SharedImagePath)
            </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sitename)
                    </td>
                    <td>
                        <img src=@Url.Content("~/images/"+item.SiteImagePath) asp-append-version=true width="100" height="100" />
                    </td>
                    <td>
                        <img src=@Url.Content("~/images/"+item.LogoImagePath) asp-append-version=true width="100" height="100" />
                    </td>
                    <td>
                        <img src=@Url.Content("~/images/"+item.SharedImagePath) asp-append-version=true width="100" height="100" />
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>