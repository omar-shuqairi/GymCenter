@model GymCenter.Models.Siteinfo

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h4 class="text-center mt-3">Edit</h4>
        <hr />
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Sitename" class="control-label"></label>
                <input asp-for="Sitename" class="form-control" required />
                <span asp-validation-for="Sitename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteImageFile" class="control-label"></label>
                <input asp-for="SiteImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LogoImageFile" class="control-label"></label>
                <input asp-for="LogoImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SharedImageFile" class="control-label"></label>
                <input asp-for="SharedImageFile" class="form-control" />
            </div>
            <div class="d-grid">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>