@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<GymCenter.Models.Testimonial>

<div class="container mt-4">
    <h2 class="text-center mb-4">Testimonials</h2>

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Content)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.User.Fname)</th>
                <th>@Html.DisplayNameFor(model => model.User.Lname)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Content)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Fname)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Lname)</td>
                    <td>
                        <!-- Approve Button -->
                        <form asp-action="ApprovedTestimonials" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Testimonialid" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <!-- Reject Button -->
                        <form asp-action="RejectedTestimonials" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Testimonialid" />
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
