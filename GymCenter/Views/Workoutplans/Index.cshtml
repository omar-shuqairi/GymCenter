@model IEnumerable<GymCenter.Models.Workoutplan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Planname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durationinmonths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseRoutines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Planname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durationinmonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseRoutines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Planid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Planid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Planid">Delete</a>
