@model IEnumerable<GymCenter.Models.Workoutplan>

@{
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<div class="container" style="margin-top: 5.5rem;">
    <p>
        <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Planname)</th>
                <th>@Html.DisplayNameFor(model => model.Durationinmonths)</th>
                <th>@Html.DisplayNameFor(model => model.ExerciseRoutines)</th>
                <th>@Html.DisplayNameFor(model => model.Goals)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Planname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Durationinmonths)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExerciseRoutines)</td>
                    <td>@Html.DisplayFor(modelItem => item.Goals)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Planid">Edit</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Planid">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Planid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
