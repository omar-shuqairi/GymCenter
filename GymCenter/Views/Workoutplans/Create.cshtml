@model GymCenter.Models.Workoutplan

@{
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 5.5rem;">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h4 class="text-center mt-3">Create New Workout Plan</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Planname" class="control-label"></label>
                <input asp-for="Planname" class="form-control" required />
                <span asp-validation-for="Planname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Durationinmonths" class="control-label"></label>
                <input asp-for="Durationinmonths" class="form-control" required />
                <span asp-validation-for="Durationinmonths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseRoutines" class="control-label"></label>
                <input asp-for="ExerciseRoutines" class="form-control" required />
                <span asp-validation-for="ExerciseRoutines" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goals" class="control-label"></label>
                <input asp-for="Goals" class="form-control" required />
                <span asp-validation-for="Goals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group d-grid">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>