@model GymCenter.Models.Workoutplan

@{
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <h3 class="text-center">Are you sure you want to delete this Workout Plan?</h3>
        <h4 class="text-center mt-3">Workout Plan Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Planname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Planname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Durationinmonths)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Durationinmonths)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExerciseRoutines)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExerciseRoutines)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Goals)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Goals)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Planid" />
            <div class="d-grid mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>

    </div>
</div>
