@model IEnumerable<GymCenter.Models.Footer>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container" style="margin-top: 5.5rem;">
    <h1 class="text-center mb-4">Footer Management</h1>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Paragraph)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tip1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tip2)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paragraph)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tip1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tip2)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>