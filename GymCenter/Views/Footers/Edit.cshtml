@model GymCenter.Models.Footer

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h4 class="text-center mt-3">Edit</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Paragraph" class="control-label"></label>
                <input asp-for="Paragraph" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tip1" class="control-label"></label>
                <input asp-for="Tip1" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tip2" class="control-label"></label>
                <input asp-for="Tip2" class="form-control" />
            </div>
            <div class="d-grid">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>