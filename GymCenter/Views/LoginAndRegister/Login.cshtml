@model GymCenter.Models.UserLogin

@{
    Layout = "~/Views/Shared/LoginAndRegisterLayout.cshtml";

}


<!--start login form -->
<section class="registration" style="background: url('@Url.Content("~/GuestDesign/img/hero/hero-1.jpg")')">
    <div class="registration-container">
        <h1>Login</h1>
        <form  method="POST" id="login-form">
            <div class="input-box">
                <label asp-for="Username"><i class="fa fa-user"></i></label>
                <input asp-for="Username" type="text" placeholder="Username" required>
            </div>

            <div class="input-box">
                <label asp-for="Passwordd"><i class="fa fa-lock"></i></label>
                <input asp-for="Passwordd" type="password" placeholder="Password" required>
            </div>

            <input type="submit" value="Login">
        </form>
        <p class="toggle">Don't have an account? <a asp-action="SignUp">Sign Up</a></p>
    </div>
</section>
<!--end login form -->
<!-- Loader -->
<div class="login-loader" id="login-loader">
    <span></span>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["ErrorMessage"] != null)
    {
        <text>
            Swal.fire({
                title: 'Login Failed',
                text: '@TempData["ErrorMessage"]',
                icon: 'error',
                confirmButtonText: 'OK',
                allowOutsideClick: false,
                allowEscapeKey: false
            });
        </text>
    }
</script>