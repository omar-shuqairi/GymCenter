@{
    Layout = "~/Views/Shared/LoginAndRegisterLayout.cshtml";

}

@model GymCenter.Models.User
<section class="registration" style="background: url('@Url.Content("~/GuestDesign/img/hero/hero-1.jpg")')">
    <div class="registration-container">
        <h1>Sign Up</h1>
        <form id="signup-form" method="post" enctype="multipart/form-data">
            <div class="input-box">
                <label asp-for="Fname"><i class="fa fa-user-circle"></i></label>
                <input asp-for="Fname" type="text" placeholder="First Name" required>
            </div>

            <div class="input-box">
                <label asp-for="Lname"><i class="fa fa-user-circle"></i></label>
                <input asp-for="Lname" placeholder="Last Name" required>
            </div>

            <div class="input-box">
                <label asp-for="Email"><i class="fa fa-envelope"></i></label>
                <input asp-for="Email" type="email" placeholder="Email" required>
            </div>

            <div class="input-box">
                <label asp-for="ImageFile"><i class="fa fa-image"></i></label>
                <input asp-for="ImageFile" type="file" accept="image/*" required>
            </div>

            <div class="input-box">
                <label for="username"><i class="fa fa-user"></i></label>
                <input type="text" id="username" name="username" placeholder="Username" required>
            </div>


            <div class="input-box">
                <label for="password"><i class="fa fa-lock"></i></label>
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>

            <input type="submit" value="Sign Up">
        </form>
        <p class="toggle">Already have an account? <a asp-action="Login">Login</a></p>
    </div>
</section>