@model IEnumerable<GymCenter.Models.Member>

@{
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}


<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h3 class="fw-bold mb-3">Welcome, @ViewData["TrainerFullName"]</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row" style="justify-content: center">
                        <div class="card-title text-center">Members List</div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Workout Plan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model)
                            {
                                <tr>
                                    <td>@(member.User != null ? member.User.Fname : "N/A")</td>
                                    <td>@(member.User != null ? member.User.Lname : "N/A")</td>
                                    <td>@(member.User != null ? member.User.Email : "N/A")</td>
                                    <td>@(member.Plan != null ? member.Plan.Planname : "No Plan")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

