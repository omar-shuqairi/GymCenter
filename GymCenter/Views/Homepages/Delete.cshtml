@model GymCenter.Models.Homepage

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container style=" margin-top: 5.5rem;"">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h1 class="card-title">Delete Homepage Entry</h1>
        </div>
        <div class="card-body">
            <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
            <hr />
            <h4 class="text-primary">Homepage Details</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3 fw-bold">Image Path</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ImagePath)</dd>

                <dt class="col-sm-3 fw-bold">Title 1</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title1)</dd>

                <dt class="col-sm-3 fw-bold">Title 2</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title2)</dd>

                <dt class="col-sm-3 fw-bold">Button Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Titlebtn)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" class="d-inline-block">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </div>
</div>
