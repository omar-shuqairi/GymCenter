@model IEnumerable<GymCenter.Models.Homepage>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container" style="margin-top: 5.5rem;">
    <h1 class="text-center mb-4">Homepage Management</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>@Html.DisplayNameFor(model => model.Title1)</th>
                <th>@Html.DisplayNameFor(model => model.Title2)</th>
                <th>@Html.DisplayNameFor(model => model.Titlebtn)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/images/" + item.ImagePath)" asp-append-version="true" class="img-thumbnail" width="100" height="100" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Title1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title2)</td>
                    <td>@Html.DisplayFor(modelItem => item.Titlebtn)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
