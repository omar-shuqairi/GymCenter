@model GymCenter.Models.Homepage

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 class="text-center mb-4">Edit Homepage</h1>

<div class="card shadow-lg p-4">
    <h4 class="card-title text-primary">Edit Homepage Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-bold">Upload Image</label>
                    <input asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title1" class="form-label fw-bold">Title 1</label>
                    <input asp-for="Title1" class="form-control" />
                    <span asp-validation-for="Title1" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title2" class="form-label fw-bold">Title 2</label>
                    <input asp-for="Title2" class="form-control" />
                    <span asp-validation-for="Title2" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Titlebtn" class="form-label fw-bold">Button Title</label>
                    <input asp-for="Titlebtn" class="form-control" />
                    <span asp-validation-for="Titlebtn" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
