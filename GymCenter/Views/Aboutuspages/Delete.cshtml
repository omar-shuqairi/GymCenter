@model GymCenter.Models.Aboutuspage

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container" style="margin-top: 5.5rem;">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h1 class="card-title">Delete About Us Page</h1>
        </div>
        <div class="card-body">
            <h3 class="mb-4">Are you sure you want to delete this item?</h3>
            <div>
                <h4>About Us Page Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Paragraph1)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Paragraph1)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Paragraph2)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Paragraph2)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Videourl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Videourl)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Backgroundvideoimg)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Backgroundvideoimg)
                    </dd>
                </dl>
            </div>

            <!-- Confirmation and Delete Form -->
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-start">
                    <input type="submit" value="Delete" class="btn btn-danger me-3" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
