@model IEnumerable<GymCenter.Models.Aboutuspage>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container" style="margin-top: 5.5rem;">
    <div class="card shadow-lg">
        <div class="card-header text-white">
            <h1 class="card-title">About Us - Manage</h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Paragraph1)</th>
                            <th>@Html.DisplayNameFor(model => model.Paragraph2)</th>
                            <th>@Html.DisplayNameFor(model => model.Videourl)</th>
                            <th>@Html.DisplayNameFor(model => model.Backgroundvideoimg)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Paragraph1)</td>
                                <td>@Html.DisplayFor(modelItem => item.Paragraph2)</td>
                                <td>@Html.DisplayFor(modelItem => item.Videourl)</td>
                                <td>
                                    <img src="@Url.Content("~/images/" + item.Backgroundvideoimg)"
                                         asp-append-version="true"
                                         width="100" height="100"
                                         class="img-thumbnail" />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
