@{
    Layout = "~/Views/Shared/MemberLayout.cshtml";

}
@model Tuple<GymCenter.Models.Member,string>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/images/" + Model.Item2)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>My Plan</h2>
                    <div class="bt-option">
                        <a asp-action="Home">Home</a>
                        <span>My Plan</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="pricing-section service-pricing spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>your plan</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-8">
                @if (Model.Item1.Plan != null)
                {
                <div class="ps-item">
                    <h3>@Model.Item1.Plan.Durationinmonths Month</h3>
                    <div class="pi-price">
                        <h2>$ @Model.Item1.Plan.Price</h2>
                        <span>@Model.Item1.Plan.Planname</span>
                    </div>
                    <h3>Exercise Routines</h3>
                    <ul>
                        <li>@Model.Item1.Plan.ExerciseRoutines</li>
                    </ul>
                    <h3>Goals</h3>
                    <ul>
                        <li>@Model.Item1.Plan.Goals</li>
                    </ul>
                    <h3>your Subscription end at @Model.Item1.SubscriptionEnd.Value.ToShortDateString()</h3>
                    </div>
                }
                else
                {
                    <div class="ps-item">
                        <h3>No Plan Available</h3>
                        <p>You have not subscribed to any plan yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["SuccessfulPayment"] != null)
    {
        <text>
                    Swal.fire({
                    title: 'Done!',
                    text: '@TempData["SuccessfulPayment"] ',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    allowOutsideClick: false,
                    allowEscapeKey: false
                });
        </text>
    }
</script>
