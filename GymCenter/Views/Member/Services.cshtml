@{
    Layout = "~/Views/Shared/MemberLayout.cshtml";

}
@model IEnumerable<GymCenter.Models.Workoutplan>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/images/" + ViewBag.SharedImage)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Services</h2>
                    <div class="bt-option">
                        <a asp-action="Home">Home</a>
                        <span>Services</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<section class="pricing-section service-pricing spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Our Plan</span>
                    <h2>Choose your pricing plan</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-8">
                  <form method="post">
                    <div class="ps-item">
                        <h3>@item.Durationinmonths Month</h3>
                        <div class="pi-price">
                            <h2>$ @item.Price</h2>
                            <span>@item.Planname</span>
                        </div>
                        <h3>Exercise Routines</h3>
                        <ul>
                            <li>@item.ExerciseRoutines</li>
                        </ul>
                        <h3>Goals</h3>
                        <ul>
                            <li>@item.Goals</li>
                        </ul>
                            <!-- Hidden input to store Plan ID -->
                            <input type="hidden" name="Planid" value="@item.Planid">
                            <!-- Submit button -->
                            <button type="submit" class="primary-btn pricing-btn">Enroll now</button>
                    </div>
                   </form>
                </div>
            }
        </div>
    </div>
</section>