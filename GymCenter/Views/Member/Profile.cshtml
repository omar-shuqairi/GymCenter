    Layout = "~/Views/Shared/MemberLayout.cshtml";

}
@* @model GymCenter.Models.JoinMemberUserTables *@
@model Tuple<GymCenter.Models.JoinMemberUserTables, List<GymCenter.Models.Invoice>>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/images/" + ViewBag.SharedImage)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Profile</h2>
                    <div class="bt-option">
                        <a asp-action="Home">Home</a>
                        <span>Profile</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-profile">
    <div class="profile-container">
        <h2>View & Update Profile</h2>
        <form id="profile-form"  method="post" enctype="multipart/form-data">
            <input type="hidden" name="Userid" value="@Model.Item1.Userid" />
            <!-- Profile Picture -->
            <div class="profile-pic">
                <img src=@Url.Content("~/images/"+@ViewData["MemberImg"]) alt="Profile Picture" id="profilePreview">
            </div>
            <div class="parent-profile">
                <div class="child-profile">

                    <!-- Fname -->
                    <div class="form-group">
                        <label for="Fname">Fisrt Name</label>
                        <input type="text" id="Fname" name="Fname" value="@Model.Item1.Fname" required>
                    </div>

                    <!-- Username -->
                    <div class="form-group">
                        <label for="Username">UserName</label>
                        <input type="text" id="Username" name="Username" value="@Model.Item1.Username">
                    </div>

                    <div class="form-group">
                        <label for="ImageFile">Upload Profile Picture</label>
                        <input type="file" id="ImageFile" name="ImageFile" accept="image/*"
                               onchange="previewProfilePic(event)">
                    </div>

                    <div class="form-group">
                        <label for="NewPassword">New Password</label>
                        <input type="password" id="NewPassword" name="NewPassword" required>
                    </div>

                </div>


                <div class="child-profile">

                    <!-- Lname -->
                    <div class="form-group">
                        <label for="Lname">last Name</label>
                        <input type="text" id="Lname" name="Lname" value="@Model.Item1.Lname" required>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="Email">Email Address</label>
                        <input type="email" id="Email" name="Email" value="@Model.Item1.Email" required>
                    </div>


                    <div class="form-group">
                        <label for="CurrentPassword">Current Password</label>
                        <input type="password" id="CurrentPassword" name="CurrentPassword" required>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm New Password</label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" required>
                    </div>

                </div>



            </div>
            <!-- Submit Button -->
            <button type="submit" class="submit-btn">Save Changes</button>

        </form>
    </div>


    @foreach (var invoice in Model.Item2)
    {
        <p>
            Invoice #@invoice.Invoiceid -
            <a href="@Url.Action("DownloadInvoice", "Member", new { invoiceId = invoice.Invoiceid })">Download</a>
        </p>
    }
</section>

<script>
    function previewProfilePic(event) {
        const reader = new FileReader();
        reader.onload = function () {
            const output = document.getElementById('profilePreview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }

