@{
    Layout = "~/Views/Shared/MemberLayout.cshtml";

}

@model Tuple<List<GymCenter.Models.Testimonial>, string>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/images/" + Model.Item2)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Testimonials</h2>
                    <div class="bt-option">
                        <a asp-action="Home">Home</a>
                        <span>Testimonials</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Testimonial Section Begin -->
<section class="testimonial-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Testimonial</span>
                    <h2>Our cilent say</h2>
                </div>
            </div>
        </div>
        <div class="ts_slider owl-carousel">
            @foreach (var item in Model.Item1)
            {
                <div class="ts_item">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <div class="ti_pic">
                                <img src="@Url.Content("~/images/" + item.User.ImagePath)" alt="">
                            </div>
                            <div class="ti_text">
                                <p>
                                    @item.Content
                                </p>
                                <h5>@item.User.Fname @item.User.Lname</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Start form for submit testimonial  -->
<section class="testimonial-submission-section">
    <div class="container">
        <h2>Submit Your Testimonial</h2>
        <form method="POST" id="testimonial-form">
            <div class="form-group">
                <label for="content">Your Testimonial</label>
                <textarea id="content" name="NewTestimonialContent" placeholder="Write your testimonial here..." rows="4" required></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="submit-btn">Submit</button>
            </div>
        </form>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["SubmitTestimonial"] != null)
    {
        <text>
        Swal.fire({
            title: 'Submitted!',
            text: '@TempData["SubmitTestimonial"]',
            icon: 'success',
            confirmButtonText: 'OK',
            allowOutsideClick: false,
            allowEscapeKey: false
        });
        </text>
    }
</script>