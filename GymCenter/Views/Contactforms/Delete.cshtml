@model GymCenter.Models.Contactform

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}

<h1 class="text-center">Delete</h1>
<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <h4 class="text-center mt-3">Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Guestname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guestname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Guestemail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guestemail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Guestcomment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Guestcomment)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
