@model IEnumerable<GymCenter.Models.Contactform>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}

<div class="container" style="margin-top: 5.5rem;">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Guestname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Guestemail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Guestcomment)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Guestname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Guestemail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Guestcomment)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>